<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:focusable="false">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    app:cardElevation="5dp"
    android:minHeight="90dp"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <LinearLayout
            android:id="@+id/layout_manage_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">



            <com.alphawallet.app.widget.UserAvatar
                android:id="@+id/wallet_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/wallet_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/image_default_indicator"
            android:layout_toEndOf="@+id/layout_manage_wallet"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wallet_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="3.2345"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/wallet_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="ETH"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/wallet_24h_change"
                    style="@style/Aw.Typography.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/tiny_8"
                    android:layout_weight="0.3"
                    android:gravity="end|center_vertical"
                    android:lines="1"
                    android:textColor="@color/positive"
                    android:textIsSelectable="true"
                    app:autoSizeTextType="uniform"
                    tools:text="+123.45%" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:text="user.eth"
                    android:textColor="@color/dove"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wallet_address_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_regular"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="|"
                    android:textColor="@color/dove"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/wallet_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:fontFamily="@font/font_regular"
                    android:singleLine="true"
                    android:text="0xe9f5cc10a54125828d7fc6b6fb0f784f731e33bf"
                    android:textColor="@color/dove"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/image_default_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/manage_wallet_btn"
            android:src="@drawable/selector_radio_tick"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/wallet_click_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp30"
            android:layout_alignStart="@id/wallet_info_layout"
            android:layout_toEndOf="@+id/manage_wallet_btn"
            android:layout_alignTop="@id/layout_manage_wallet"
            android:layout_alignBottom="@id/layout_manage_wallet"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/manage_wallet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_menu"
            android:visibility="visible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

</RelativeLayout>


